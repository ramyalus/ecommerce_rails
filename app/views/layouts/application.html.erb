<!DOCTYPE html>
<html>
<head>
  <title>EcommerceRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1> Welcome to Ecommerce </h1>
<% if user_signed_in? %>
  Welcome <%=current_user.username%> <%= link_to "Account settings", edit_user_registration_path %> 
  <%= link_to "Your Cart (#{current_user.cart_line_items.pluck(:quantity).inject(:+)})", cart_line_items_path %>

  <%= link_to "Your Orders", orders_path %>
	<%= link_to "Products", products_path%>
	<%= link_to "Categories", categories_path%>
	<%= link_to "Logout", destroy_user_session_path, method: :delete, data: {confirm: "logging out??"} %>
	<% else %>
		<%= link_to "Login", new_user_session_path %> | <%= link_to "Register", new_user_registration_path%>
	<%end%>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
  